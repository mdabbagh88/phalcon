<?xml version="1.0"?>
<config>
    <module>
        <version>0.1.0</version>
        <enabled>true</enabled>
    </module>
    <frontend>
        <events>
            <checkout_cart_save_before>
                <observers>
                    <disable_add_expired_products>
                        <type>model</type>
                        <class>Web_Deal_Model_Observer</class>
                        <method>disableAddToCart</method>
                    </disable_add_expired_products>
                </observers>
            </checkout_cart_save_before>
        </events>
        <layout>
            <updates>
                <deal>
                    <file>deal.xml</file>
                </deal>
            </updates>
        </layout>
        <routers>
            <deal>
                <use>standard</use>
                <args>
                    <module>Web_Deal</module>
                    <frontName>deal</frontName>
                </args>
            </deal>
        </routers>
    </frontend>
    <global>
    </global>
    <admin>
        <routers>
            <deal>
                <use>admin</use>
                <args>
                    <module>Web_Deal</module>
                    <frontName>deal</frontName>
                </args>
            </deal>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <deal translate="title" module="deal">
                            <title>Deal</title>
                            <sort_order>1000</sort_order>
                            <children>
                                <dealbackend translate="title">
                                    <title>Backend Page Title</title>
                                </dealbackend>
                            </children>
                        </deal>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <deal>
                    <file>deal.xml</file>
                </deal>
            </updates>
        </layout>
    </adminhtml>
    <crontab>
        <jobs>
            <Web_Voucher_autorenew>
                <schedule>
                    <cron_expr>5 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>Web_Deal_Model_Observer::renewDeal</model>
                </run>
            </Web_Voucher_autorenew>
        </jobs>
    </crontab>
</config>